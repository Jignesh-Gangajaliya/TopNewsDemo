# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

target 'TopHeading' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for NewsAppDemo
  # Moya use for Alamofire Wrapper Class
  #https://github.com/Moya/Moya
  pod 'Moya', '14.0.0'

  #Kingfisher Use for Downloading Cashing the Image
  #https://github.com/onevcat/Kingfisher
  pod 'Kingfisher', '5.15.0'
  
  #SVProgressHUD is a clean and easy-to-use HUD meant to display the progress of an ongoing task on iOS and tvOS.
  #https://github.com/SVProgressHUD/SVProgressHUD
  pod 'SVProgressHUD', '2.2.5'
  
  #Lightbox is a convenient and easy to use image viewer for your iOS app,
  #https://github.com/hyperoslo/Lightbox
  pod 'Lightbox', '2.4.2'
end
